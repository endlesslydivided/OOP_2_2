<UserControl x:Class="WearShop.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WearShop"
             mc:Ignorable="d" Height="48.466" Width="418.134">
    <Grid Background="Gainsboro" Height="51" Margin="0,0,0.4,0" VerticalAlignment="Top">
        <ProgressBar x:Name="Progress" Margin="10,10,8,10" Maximum="100" BorderBrush="DarkMagenta" BorderThickness="2" Background="Beige" Minimum="0" Value="0" ValueChanged="ProgressBar_ValueChanged">
            <ProgressBar.Foreground>
                <SolidColorBrush Color="LawnGreen"></SolidColorBrush>
            </ProgressBar.Foreground>
        </ProgressBar>
        <Label x:Name="LabelValue" Content="0" Margin="10,10,8,10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="5,-6,5,-3" FontFamily="Futura Md BT" FontSize="20" ScrollViewer.CanContentScroll="True" FontWeight="Bold"/>

    </Grid>
</UserControl>
